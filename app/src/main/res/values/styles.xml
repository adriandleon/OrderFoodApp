<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonSignUp" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorButtonSignUp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorButtonSignUp</item>
    </style>

    <style name="buttonSignIn" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorButtonSignIn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorButtonSignIn</item>
    </style>

</resources>
